<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:id="@+id/micIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_btn_speak_now"
        android:contentDescription="Microphone Icon" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listening for washing machine completion..."
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/serverStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server: Connecting..."
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:textColor="#666666"
        android:textAlignment="center" />

    <Button
        android:id="@+id/testServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Server Connection"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tokenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FCM Token:"
        android:textSize="12sp"
        android:layout_marginTop="32dp"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/tokenText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="(token will appear here)"
        android:textSize="10sp"
        android:textColor="#888888"
        android:padding="8dp"
        android:background="#EEEEEE"
        android:layout_marginTop="4dp"
        android:textIsSelectable="true" />

</LinearLayout>