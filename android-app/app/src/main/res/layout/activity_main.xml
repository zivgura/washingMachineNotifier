<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:id="@+id/micIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_btn_speak_now"
        android:contentDescription="Microphone Icon" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ§º Washing Machine Notifier"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listening for washing machine completion..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#666666"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/serverStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server: Connecting..."
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:textColor="#666666"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/testServerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Server"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/calibrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”§ Calibrate"
            android:layout_marginStart="8dp"
            android:padding="12dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“§ Email notifications enabled"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        android:textColor="#4CAF50"
        android:textAlignment="center" />

</LinearLayout>